{
    "name": "laravelfy/commentable",
    "description": "Laravel 快速实现评论的功能",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "xiaohui lam",
        "email": "xiaohui.lam@icloud.com"
    }],
    "require": {
        "laravel/framework": "5.7.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "laravelfy/commentable-providers": "self.version",
        "fzaninotto/faker": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Laravelfy\\Commentable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laravelfy\\Commentable\\Tests\\": "tests/"
        }
    },
    "repositories": {
        "laravelfy/commentable-providers": {
            "type": "vcs",
            "url": "git@github.com:laravelfy/commentable-providers.git"
        }
    }
}
